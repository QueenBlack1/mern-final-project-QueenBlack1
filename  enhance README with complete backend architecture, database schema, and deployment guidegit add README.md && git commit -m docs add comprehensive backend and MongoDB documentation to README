[32m+[m[32m### Installation[m
[32m+[m
[32m+[m[32m1. **Clone the Repository**[m
[32m+[m[32m   ```bash[m
[32m+[m[32m   git clone https://github.com/signsmart/signsmart-fullstack.git[m
[32m+[m[32m   cd signsmart-fullstack[m
[32m+[m
[32m+[m[32m   Database Schema[m
[32m+[m[32mUser Model[m
[32m+[m[32mjavascript[m
[32m+[m[32m{[m
[32m+[m[32m  _id: ObjectId,[m
[32m+[m[32m  email: String,           // Unique[m
[32m+[m[32m  password: String,        // Hashed[m
[32m+[m[32m  name: String,[m
[32m+[m[32m  avatar: String,[m
[32m+[m[32m  ageGroup: String,        // 'child', 'teen', 'adult'[m
[32m+[m[32m  preferences: {[m
[32m+[m[32m    language: String,      // 'ASL', 'BSL', etc.[m
[32m+[m[32m    difficulty: String,    // 'beginner', 'intermediate', etc.[m
[32m+[m[32m    notifications: Boolean[m
[32m+[m[32m  },[m
[32m+[m[32m  createdAt: Date,[m
[32m+[m[32m  updatedAt: Date[m
[32m+[m[32m}[m
[32m+[m[32mProgress Model[m
[32m+[m[32mjavascript[m
[32m+[m[32m{[m
[32m+[m[32m  _id: ObjectId,[m
[32m+[m[32m  userId: ObjectId,        // Reference to User[m
[32m+[m[32m  level: String,           // 'beginner', 'intermediate', etc.[m
[32m+[m[32m  lesson: String,          // 'alphabet', 'numbers', etc.[m
[32m+[m[32m  signId: ObjectId,        // Reference to Sign[m
[32m+[m[32m  accuracy: Number,        // 0-100[m
[32m+[m[32m  attempts: Number,[m
[32m+[m[32m  completed: Boolean,[m
[32m+[m[32m  bestScore: Number,[m
[32m+[m[32m  timeSpent: Number,       // in seconds[m
[32m+[m[32m  lastPracticed: Date[m
[32m+[m[32m}[m
[32m+[m[32mSign Model[m
[32m+[m[32mjavascript[m
[32m+[m[32m{[m
[32m+[m[32m  _id: ObjectId,[m
[32m+[m[32m  name: String,[m
[32m+[m[32m  category: String,        // 'alphabet', 'numbers', 'greetings'[m
[32m+[m[32m  difficulty: String,      // 'beginner', 'intermediate', etc.[m
[32m+[m[32m  icon: String,            // Emoji or image URL[m
[32m+[m[32m  description: String,[m
[32m+[m[32m  instructions: String,[m
[32m+[m[32m  videoUrl: String,        // Demonstration video[m
[32m+[m[32m  imageUrl: String,        // Reference image[m
[32m+[m[32m  tags: [String],          // Searchable tags[m
[32m+[m[32m  variations: [            // Different sign variations[m
[32m+[m[32m    {[m
[32m+[m[32m      region: String,      // 'ASL', 'BSL', etc.[m
[32m+[m[32m      description: String[m
[32m+[m[32m    }[m
[32m+[m[32m  ][m
[32m+[m[32m}[m
[32m+[m[32mGame Session Model[m
[32m+[m[32mjavascript[m
[32m+[m[32m{[m
[32m+[m[32m  _id: ObjectId,[m
[32m+[m[32m  userId: ObjectId,[m
[32m+[m[32m  gameType: String,        // 'memory', 'quiz', 'spelling'[m
[32m+[m[32m  score: Number,[m
[32m+[m[32m  duration: Number,        // in seconds[m
[32m+[m[32m  correctAnswers: Number,[m
[32m+[m[32m  totalQuestions: Number,[m
[32m+[m[32m  date: Date,[m
[32m+[m[32m  level: String[m
[32m+[m[32m}[m
